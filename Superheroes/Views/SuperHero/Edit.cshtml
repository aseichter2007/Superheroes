@model Superheroes.Models.SuperHero

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit this superhero</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="alterEgo" class="control-label"></label>
                <input asp-for="alterEgo" class="form-control" />
                <span asp-validation-for="alterEgo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="primaryAbility" class="control-label"></label>
                <input asp-for="primaryAbility" class="form-control" />
                <span asp-validation-for="primaryAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="secondaryAbility" class="control-label"></label>
                <input asp-for="secondaryAbility" class="form-control" />
                <span asp-validation-for="secondaryAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="catchPrase" class="control-label"></label>
                <input asp-for="catchPrase" class="form-control" />
                <span asp-validation-for="catchPrase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weakness" class="control-label"></label>
                <input asp-for="weakness" class="form-control" />
                <span asp-validation-for="weakness" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="favorite" /> @Html.DisplayNameFor(model => model.favorite)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IMGurl" class="control-label"></label>
                <input asp-for="IMGurl" class="form-control" />
                <span asp-validation-for="IMGurl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
